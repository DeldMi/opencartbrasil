{{ header }}{{ column_left }}
<div id="content" class="extension-page-info">
  <div class="page-header">
    <div class="container-fluid">
      <h1>{{ heading_title }}</h1>

      <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
      </ul>

      <div class="pull-right">
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <i class="fa fa-puzzle-piece"></i> {{ extension_name }}
        </h3>
      </div>

    <div class="panel-body">
      <div class="row">
        <div class="col-sm-12 col-md-8" id="extension-images">
          <div class="full-image">
            <div id="carousel-images" class="carousel slide">
              <!-- Indicators -->
              <ol class="carousel-indicators">
                {% for key,image in images %}
                <li data-target="#carousel-images" data-slide-to="{{ key }}" class="{{ key == 0 ? 'active' : '' }}"></li>
                {% endfor %}
              </ol>

              <!-- Slides -->
              <div class="carousel-inner" role="listbox">
                {% for key,image in images %}
                <div class="item {{ key == 0 ? 'active' : '' }}">
                  <img src="{{ image }}" alt="{{ extension_name }}">
                </div>
                {% endfor %}
              </div>

              <!-- Controls -->
              <a class="left carousel-control" href="#carousel-images" role="button" data-slide="prev">
                <span class="fa fa-arrow-left" aria-hidden="true"></span>
                <span class="sr-only">{{ text_prev }}</span>
              </a>
              <a class="right carousel-control" href="#carousel-images" role="button" data-slide="next">
                <span class="fa fa-arrow-right" aria-hidden="true"></span>
                <span class="sr-only">{{ text_next }}</span>
              </a>
            </div>
          </div>

          <div class="thumbnails">
            {% for thumbnail in thumbnails %}
            <a href="{{ thumbnail.href }}"><img src="{{ thumbnail.src }}" alt="{{ extension_name }}"></a>
            {% endfor %}
          </div>
        </div>

        <div class="col-sm-12 col-md-4" id="extension-info">
          <div id="buy" class="well">
            <div id="price" class="row">
              <h4 class="col-xs-5"><strong>{{ text_price }}</strong></h4>
              <div class="col-xs-7 text-right">{{ price }}</div>
            </div>
            <hr>

            <ul class="list-check">
              {% for item in lists %}
              <li>{{ item }}</li>
              {% endfor %}
            </ul>
            <hr>

            <div class="row">
              <h4 class="col-xs-5"><strong>{{ text_updated_at }}</strong></h4>
              <div class="col-xs-7 text-right">{{ updated_at }}</div>
            </div>
            <hr>

            <div class="row">
              <h4 class="col-xs-5"><strong>{{ text_released_at }}</strong></h4>
              <div class="col-xs-7 text-right">{{ released_at }}</div>
            </div>
            <hr>

            <div class="row">
              <h4 class="col-xs-5"><strong>{{ text_downloads }}</strong></h4>
              <div class="col-xs-7 text-right">{{ downloads }}</div>
            </div>
          </div>

          <div id="install" class="well">
            <div class="progress">
              <div class="progress-bar progress-bar-success" role="progressbar" style="width: 0%;"></div>
            </div>
            <button id="button-install" class="btn btn-lg btn-primary">{{ button_install }}</button>
          </div>
        </div>

        <div class="col-sm-12" id="extension-description">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-description" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-documentation" data-toggle="tab">{{ tab_documentation }}</a></li>
          </ul>

          <div class="tab-content">
            <div id="tab-description" class="tab-pane active">{{ description }}</div>
            <div id="tab-documentation" class="tab-pane">{{ documentation }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="modal-full-image">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body"></div>
    </div>
  </div>
</div>

<script>
  $('.thumbnails a').on('click', function(ev) {
    ev.preventDefault();
    const img = ev.target;

    $('#modal-full-image .modal-body').empty().append(`<img src="${img.parentElement.href}" />`);
    $('#modal-full-image').modal('show');
  })

  $('#button-install').on('click', function() {
    $('#install .progress').addClass('active');
    $(this).button('loading');

    let progressTotal = 0;
    const progress = setInterval(() => {
      $('#install .progress-bar').css({width: `${progressTotal++}%`});

      if (progressTotal >= 100) {
        clearInterval(progress);
        $(this).button('reset');
      }
    }, 50)
  })
</script>
